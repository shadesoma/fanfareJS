{
  "name": "fanfare",
  "productName": "fanfare",
  "version": "1.0.4",
  "companyName": "somakun",
  "LegalCopyright" : "Copyright Â© 2021 somakun",
  "description": "My Electron application description",
  "FileDescription": "My Electron application description",
  "ProductName": "fanfareJs",
  "main": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make --platform=win32",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\"",
    "build": "electron-forge package & electron-forge make --platform=win32"
  },
  "keywords": [],
  "author": {
    "name": "somakun",
    "email": "somabaka@gmail.com"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./src/assets/icons/icon.png"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "fanfare",
            "icon": "./src/assets/icons/icon.png"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "name": "fanfare"
          }
        }
      ]
    }
  },
  "build": {
    "linux": {
      "icon": "./build/icon.png"
    },
    "win": {
      "icon": "build/icon.ico"
    }
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  },
  "devDependencies": {
    "electron-builder": "^22.9.1",
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "electron": "11.0.2"
  }
}
